# Google Ads API Credentials
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_login_customer_id
GOOGLE_ADS_CUSTOMER_ID=your_customer_id

# Google AI API (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Agent Configuration
# Maximum percentage change for daily budget adjustments (default: 20)
MAX_BUDGET_CHANGE_PCT=20
# Maximum percentage change for keyword bid adjustments (default: 30)
MAX_BID_CHANGE_PCT=30
# Days of data to analyze by default (default: 30)
DAYS_TO_ANALYZE=30

# Meta Learning Settings
META_LEARNING_ENABLED=true
META_LEARNING_SIMILARITY_THRESHOLD=0.7
META_LEARNING_HISTORY_MAX_SIZE=1000
META_LEARNING_MODEL_PATH=data/meta_learning/meta_models.pkl

# Forecasting Settings
FORECASTING_HORIZON_DAYS=30
FORECASTING_CONFIDENCE_LEVEL=0.95
FORECASTING_TRAINING_WINDOW_DAYS=90
FORECASTING_MODEL_DIR=data/forecasting/models

# OpenAI API credentials
OPENAI_API_KEY=your_openai_api_key

# Reinforcement Learning settings
RL_AUCTION_SIMULATOR_ENABLED=true
RL_EPSILON=0.1
RL_LEARNING_RATE=0.001
RL_DISCOUNT_FACTOR=0.95
RL_BATCH_SIZE=64
RL_MEMORY_SIZE=10000
RL_TARGET_UPDATE_FREQUENCY=100
RL_MODEL_SAVE_PATH=models/rl

# Expert Feedback settings
EXPERT_FEEDBACK_APPROVAL_REQUIRED=true
EXPERT_FEEDBACK_AUTO_APPLY=false
EXPERT_FEEDBACK_RETENTION_DAYS=90

# SERP Scraper settings
SERP_SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
SERP_SCRAPER_INTERVAL_HOURS=24
SERP_SCRAPER_USE_PROXY=false
SERP_SCRAPER_PROXY_HOST=proxy.example.com
SERP_SCRAPER_PROXY_PORT=8080
SERP_SCRAPER_WEBDRIVER_PATH=path/to/chromedriver 